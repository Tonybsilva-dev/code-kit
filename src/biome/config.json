{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "quoteStyle": "single",
    "semicolons": "always",
    "trailingCommas": "all"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUnusedVariables": "warn"
      },
      "suspicious": {
        "noConsole": "error",
        "noDoubleEquals": "error"
      }
    }
  }
}
